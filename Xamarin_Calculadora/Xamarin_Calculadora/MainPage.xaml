<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Xamarin_Calculadora"
             x:Class="Xamarin_Calculadora.MainPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label x:Name="resultText"
               FontSize="48"
               FontAttributes="Bold"
               BackgroundColor="Black"
               Text="0"
               TextColor="White"
               HorizontalTextAlignment="End"
               VerticalTextAlignment="Center"
               LineBreakMode="NoWrap"
               Grid.ColumnSpan="4"/>

        <Button Text="7"
                Grid.Row="1"
                Grid.Column="0"
                BackgroundColor="White"
                TextColor="Black"
                FontSize="36"
                Clicked="numeroSelecionado"
                BorderRadius="0"/>
        <Button Text="8"
                Grid.Row="1"
                Grid.Column="1"
                BackgroundColor="White"
                TextColor="Black"
                FontSize="36"
                Clicked="numeroSelecionado"
                BorderRadius="0"/>
        <Button Text="9"
                Grid.Row="1"
                Grid.Column="2"
                BackgroundColor="White"
                TextColor="Black"
                Clicked="numeroSelecionado"
                FontSize="36"
                BorderRadius="0"/>
        <Button Text="÷"
                Grid.Row="1"
                Grid.Column="3"
                BackgroundColor="Orange"
                TextColor="White"
                FontSize="36"
                Clicked="onSelectOperator"
                BorderRadius="0"/>

        <Button Text="4"
                Grid.Row="2"
                Grid.Column="0"
                BackgroundColor="White"
                TextColor="Black"
                FontSize="36"
                Clicked="numeroSelecionado"
                BorderRadius="0"/>
        <Button Text="5"
                Grid.Row="2"
                Grid.Column="1"
                BackgroundColor="White"
                TextColor="Black"
                FontSize="36"
                Clicked="numeroSelecionado"
                BorderRadius="0"/>
        <Button Text="6"
                Grid.Row="2"
                Grid.Column="2"
                BackgroundColor="White"
                TextColor="Black"
                FontSize="36"
                Clicked="numeroSelecionado"
                BorderRadius="0"/>
        <Button Text="x"
                Grid.Row="2"
                Grid.Column="3"
                BackgroundColor="Orange"
                TextColor="White"
                FontSize="36"
                Clicked="onSelectOperator"
                BorderRadius="0"/>

        <Button Text="1"
                Grid.Row="3"
                Grid.Column="0"
                BackgroundColor="White"
                TextColor="Black"
                FontSize="36"
                Clicked="numeroSelecionado"
                BorderRadius="0"/>
        <Button Text="2"
                Grid.Row="3"
                Grid.Column="1"
                BackgroundColor="White"
                TextColor="Black"
                FontSize="36"
                Clicked="numeroSelecionado"
                BorderRadius="0"/>
        <Button Text="3"
                Grid.Row="3"
                Grid.Column="2"
                BackgroundColor="White"
                TextColor="Black"
                FontSize="36"
                Clicked="numeroSelecionado"
                BorderRadius="0"/>
        <Button Text="-"
                Grid.Row="3"
                Grid.Column="3"
                BackgroundColor="Orange"
                TextColor="White"
                FontSize="36"
                Clicked="onSelectOperator"
                BorderRadius="0"/>

        <Button Text="0"
                Grid.Row="4"
                Grid.ColumnSpan="3"
                BackgroundColor="White"
                TextColor="Black"
                FontSize="36"
                Clicked="numeroSelecionado"
                BorderRadius="0"/>
        <Button Text="+"
                Grid.Row="4"
                Grid.Column="3"
                BackgroundColor="Orange"
                TextColor="White"
                FontSize="36"
                Clicked="onSelectOperator"
                BorderRadius="0"/>

        <Button Text="C"
                Grid.Row="5"
                Grid.Column="0"
                BackgroundColor="Gray"
                TextColor="White"
                FontSize="36"
                BorderRadius="0"
                Clicked="limpar"/>
        
        
        <Button Text="="
                Grid.Row="5"
                Grid.Column="1"
                Grid.ColumnSpan="3"
                BackgroundColor="Orange"
                TextColor="White"
                FontSize="36"
                Clicked="onCalculate"
                BorderRadius="0"/>


    </Grid>

</ContentPage>
